<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewBag.Title - 智能医疗平台</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("CssJs", required: false)
</head>
<body>
    <header>
        <div class="nav">
            <nav class="navbar navbar-default">
                <div class="container-fluid" style="margin:0px 25px;">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/image/logo.jpg" />
                            <span class="name">智能医疗平台</span>
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index","Home")">网站首页</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole(RoleType.User.ToString()))
                                {
                                    <li><a href="@Url.Action("Logs","User")">预约记录</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Tasks","User")">体检任务</a></li>
                                }
                            }
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("LogOff","Account")">退出</a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Login","Account")">登录</a></li>
                                <li><a href="@Url.Action("Register","Account")">注册</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    @RenderBody()

</body>
</html>
